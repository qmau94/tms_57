<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [:supervisor, @subject] do |f| %>
      <%= render "shared/error_messages", object: @subject %>
    
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.label :description %>
      <%= f.text_area :description, class: "form-control" %>
    
      <%= f.label :tasks %>
      <%= f.fields_for :tasks do |builder| %>
        <%= render "task_fields", f: builder %>
      <% end %>
      <%= link_to_add_fields t("subjects.add_task"), f, :tasks %>

      <%= f.submit class: "btn btn-primary" do %>
        <%= t "subjects.#{params[:action]}_title" %>
      <% end %>
    <% end %> 
  </div>
</div>
