<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [:supervisor, @user] do |f| %>
      <%= render "shared/error_messages", object: @user %>
    
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label :password %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label :password_confirmation, t("edit.pass_confirmation") %>
      <%= f.password_field :password_confirmation, class: "form-control" %>

      <%=f.label :role, t("session.set_role") %>
      <%= f.select :role, @role.collect{|key, value| [t(key), key]} %>

      <%= f.submit t("button.submit"), class: "btn btn-primary" %>
    <% end %> 
  </div>
</div>
